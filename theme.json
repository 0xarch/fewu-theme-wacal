{
    "name": "Wacal Theme",
    "author": "0xarch",
    "thanks": "The GNOME VDG",
    "description": "Simple theme for Nexo",
    "lib": [
        "@:highlightjs:&&:unpkg",
        "@:0xarch:Wark/GNOME:jsdelivr"
    ],
    "operations": [
        {
            "do": "copy",
            "from": "@posts",
            "to": "posts"
        }
    ],
    "plugin": true,
    "Modules.search": {
        "use": [
            "title",
            "date",
            "id",
            "content"
        ]
    },
    "parser": "PUG",
    "template": "post.pug",
    "layouts": [
        {
            "name": "Index page (Home page)",
            "from": "index.pug",
            "to": "/"
        },
        {
            "name": "Post list page",
            "from": "page.pug",
            "to": "page",
            "use_split": true,
            "option": {
                "@split": {
                    "parent": "sort.defaultOrder",
                    "every": 10
                }
            }
        },
        {
            "name": "Archive page",
            "from": "archive.pug",
            "to": "archive",
            "use_split": true,
            "option": {
                "@split": {
                    "parent": "sort.defaultOrder",
                    "every": 10
                }
            }
        },
        {
            "name": "Category Template",
            "from": "category.pug",
            "to": "category",
            "use_split": true,
            "option": {
                "@split": {
                    "parent": "site.categories",
                    "every": 48
                }
            }
        },
        {
            "name": "Category (Each) Template",
            "from": "category_every.pug",
            "to": "category/s{{each.name}}",
            "use_foreach": true,
            "use_split": true,
            "option": {
                "@foreach": {
                    "parent": "site.categories"
                },
                "@split": {
                    "parent": "varias.value.included",
                    "every": 5
                }
            }
        },
        {
            "name": "Tag Template",
            "from": "tag.pug",
            "to": "tag",
            "use_split": true,
            "option": {
                "@split": {
                    "parent": "site.tags",
                    "every": 48
                }
            }
        },
        {
            "name": "Tag (Each) Template",
            "from": "tag_every.pug",
            "to": "tag/s{{each.name}}",
            "use_foreach": true,
            "use_split": true,
            "option": {
                "@foreach": {
                    "parent": "site.tags"
                },
                "@split": {
                    "parent": "each.value.included",
                    "every": 5
                }
            }
        },
        {
            "name": "status",
            "from": "status.pug",
            "to": "status"
        },
        {
            "name": "about",
            "from": "about.pug",
            "to": "about",
            "addition": {
                "post": "excluded_posts.about\\.md"
            }
        }
    ]
}
